{
    "trailingComma": "none",
    "singleQuote": true,
    "tabWidth": 4,
    "arrowParens": "avoid",
    "overrides": [
        {
            "files": "**/*.html",
            "options": {
                "parser": "lwc",
                "tabWidth": 2,
                "printWidth": 120
            }
        },
        {
            "files": "**/*.css",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
